<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_member_search"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_error_net_reachable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_input_height"
        android:background="@color/group_net_error_bg"
        android:drawableLeft="@drawable/group_ic_noservice"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/group_error_net_padding_left"
        android:text="@string/error_net_unreachable"
        android:textSize="@dimen/group_error_net_font_size"
        android:visibility="gone" />

    <View
        android:id="@+id/tv_error_net_reachable_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_bottom"
        android:visibility="gone" />

    <ExpandableListView
        android:id="@+id/expandableListView_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="@color/bg_lightgrey"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_bottom" />

</LinearLayout>