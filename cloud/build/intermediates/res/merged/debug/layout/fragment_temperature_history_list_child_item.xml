<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/childlayout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/pressure_history_trend_high"
    android:background="@drawable/selector_press_light_grey_effect"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pressure_history_list_margin"
    android:paddingRight="@dimen/pressure_history_list_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pressure_history_trend_child_high"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/temperature_history_list_child_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/shadow_dark"
                android:textSize="@dimen/font_pressure_history_list_small" >
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/temperature_history_list_child_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@color/font_history_high_priority_value"
                        android:textSize="@dimen/font_pressure_history_list_biggest" >
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/oxygen_history_list_child_item_margin_left"
                        android:gravity="center_vertical"
                        android:text="@string/ear_temperature_unit"
                        android:textColor="@color/shadow_dark"
                        android:textSize="@dimen/font_pressure_history_list_small" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_bottom" />

</LinearLayout>