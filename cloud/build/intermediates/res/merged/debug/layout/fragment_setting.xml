<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.medzone.mcloud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_lightgrey" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_top_item_height"
            android:background="@drawable/selector_press_white_effect"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.medzone.framework.view.RoundedImageView
                android:id="@+id/im_personal_icon"
                android:layout_width="@dimen/setting_avator_width"
                android:layout_height="@dimen/setting_avator_height"
                android:layout_marginLeft="@dimen/setting_avator_margin_left"
                android:layout_marginRight="@dimen/setting_avator_margin_right"
                android:src="@drawable/settingview_avatar"
                app:oval="true" />

            <TextView
                android:id="@+id/tv_personal_name"
                style="@style/SettingNameStype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name" />

            <View
                android:layout_width="0dip"
                android:layout_height="@dimen/divider_height"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/setting_arrow_width"
                android:layout_height="@dimen/setting_arrow_height"
                android:layout_marginRight="@dimen/setting_arrow_margin_right"
                android:contentDescription="@string/app_name"
                android:src="@drawable/settingview_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginBottom="@dimen/setting_avator_margin_bottom"
            android:background="@color/divider_bottom" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:textColor="@color/font_input_dark" >

            <TextView
                android:id="@+id/tv_privacy"
                style="@style/SettingKeyStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:background="@drawable/selector_press_white_effect"
                android:drawableLeft="@drawable/settingview_ic_securityprivacy"
                android:drawablePadding="@dimen/setting_drawable_padding"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/setting_item_padding_left"
                android:paddingRight="@dimen/setting_item_padding_right"
                android:text="@string/setting_security_and_privacy" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:alpha="0.2"
                android:background="@color/divider_mid" />

            <TextView
                android:id="@+id/tv_manager_device"
                style="@style/SettingKeyStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:background="@drawable/selector_press_white_effect"
                android:drawableLeft="@drawable/settingview_ic_devicemanagement"
                android:drawablePadding="@dimen/setting_drawable_padding"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/setting_item_padding_left"
                android:paddingRight="@dimen/setting_item_padding_right"
                android:text="@string/setting_device_manager" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:alpha="0.2"
                android:background="@color/divider_mid" />

            <TextView
                android:id="@+id/tv_measure_setting"
                style="@style/SettingKeyStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:background="@drawable/selector_press_white_effect"
                android:drawableLeft="@drawable/settingview_ic_measuringset"
                android:drawablePadding="@dimen/setting_drawable_padding"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/setting_item_padding_left"
                android:paddingRight="@dimen/setting_item_padding_right"
                android:text="@string/setting_measure" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider_bottom"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_user_helper"
                style="@style/SettingKeyStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:drawableLeft="@drawable/settingview_ic_help"
                android:drawablePadding="@dimen/setting_drawable_padding"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/setting_item_padding_left"
                android:paddingRight="@dimen/setting_item_padding_right"
                android:text="@string/use_help"
                android:visibility="gone" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_top_item_margin_top"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:textColor="@color/font_input_dark" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider_bottom" />

            <TextView
                android:id="@+id/tv_shared"
                style="@style/SettingKeyStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:drawableLeft="@drawable/settingview_ic_share"
                android:drawablePadding="@dimen/setting_drawable_padding"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/setting_item_padding_left"
                android:paddingRight="@dimen/setting_item_padding_right"
                android:text="@string/share_cloud"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider_bottom"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_about"
                style="@style/SettingKeyStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:background="@drawable/selector_press_white_effect"
                android:drawableLeft="@drawable/settingview_ic_about"
                android:drawablePadding="@dimen/setting_drawable_padding"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/setting_item_padding_left"
                android:paddingRight="@dimen/setting_item_padding_right"
                android:text="@string/about_cloud" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_bottom" />
    </LinearLayout>

</ScrollView>