<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ea_ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1172" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <ScrollView
                    android:id="@+id/ea_sv_full_scroller"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <!-- Item Open Clock -->

                        <LinearLayout
                            android:id="@+id/ea_ll_alarm_enabled"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:clickable="false"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/clock_open"
                                    android:textColor="#000000"
                                    android:textStyle="bold" >
                                </TextView>

                                <TextView
                                    android:id="@+id/ea_tv_belong"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sa_create_by" >
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical" >

                                <CheckBox
                                    android:id="@+id/ea_chk_alarm_enabled"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >
                                </CheckBox>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ea_ll_app"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ea_ti_app"
                                    android:textColor="#000000"
                                    android:textStyle="bold" >
                                </TextView>

                                <TextView
                                    android:id="@+id/ea_tv_app_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sa_ring_select" >
                                </TextView>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ea_iv_app_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:adjustViewBounds="true"
                                android:maxHeight="48dip"
                                android:maxWidth="48dip"
                                android:minHeight="48dip"
                                android:minWidth="48dip" >
                            </ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ea_ll_label"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="@string/clock_note"
                                android:textColor="#000000"
                                android:textStyle="bold" >
                            </TextView>

                            <TextView
                                android:id="@+id/ea_tv_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="@string/ea_label_msg" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ea_ll_alarm_time"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="@string/clock_time"
                                android:textColor="#000000"
                                android:textStyle="bold" >
                            </TextView>

                            <TextView
                                android:id="@+id/ea_tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="@string/reminder_time" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ea_ll_alarm_repeat"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="@string/clock_mode"
                                android:textColor="#000000"
                                android:textStyle="bold" >
                            </TextView>

                            <TextView
                                android:id="@+id/ea_tv_alarm_repeat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="@string/sa_btn_dismiss" >
                            </TextView>
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:background="@android:drawable/divider_horizontal_dark" >
                        </View>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>