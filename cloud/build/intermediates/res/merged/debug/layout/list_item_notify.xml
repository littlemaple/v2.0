<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.medzone.mcloud"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/item_input_height"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_avatar"
        android:layout_width="@dimen/group_dispose_icon_layout_width"
        android:layout_height="@dimen/item_input_height"
        android:gravity="center" >

        <com.medzone.framework.view.RoundedImageView
            android:id="@+id/image_group_avator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/group_dispose_icon_margin_vertical"
            android:layout_marginLeft="@dimen/group_dispose_icon_margin_left"
            android:layout_marginRight="@dimen/group_dispose_icon_margin_right"
            android:layout_marginTop="@dimen/group_dispose_icon_margin_vertical"
            android:maxHeight="@dimen/group_icon_size"
            android:maxWidth="@dimen/group_icon_size"
            android:minHeight="@dimen/group_dispose_icon_min_size"
            android:minWidth="@dimen/group_dispose_icon_min_size"
            app:oval="true" />
    </LinearLayout>

    <Button
        android:id="@+id/button_action"
        android:layout_width="@dimen/group_dispose_button_width"
        android:layout_height="@dimen/group_dispose_button_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/item_margin_horizontal"
        android:background="@drawable/selector_button_group_orange"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/dispose"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="@dimen/group_dispose_button_width"
        android:layout_height="@dimen/group_dispose_button_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/item_margin_horizontal"
        android:focusable="false"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/dispose"
        android:textColor="@color/shadow_dark"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_input_height"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ll_avatar"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_group_descripton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_group_name"
            android:alpha="0.4"
            android:text="@string/todo"
            android:textSize="@dimen/group_dispose_description_textsize" />

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo"
            android:textSize="@dimen/group_dispose_info_textsize"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv__action_status"
        android:layout_width="@dimen/group_dispose_button_width"
        android:layout_height="@dimen/group_dispose_button_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/item_margin_horizontal"
        android:alpha="0.4"
        android:gravity="center"
        android:text="@string/todo"
        android:textSize="@dimen/group_dispose_info_textsize"
        android:visibility="gone" />

</RelativeLayout>