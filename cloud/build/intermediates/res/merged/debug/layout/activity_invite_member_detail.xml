<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.medzone.mcloud"
    android:layout_width="@dimen/group_invite_dialog_width"
    android:layout_height="@dimen/group_invite_dialog_height"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:minHeight="@dimen/group_invite_dialog_height"
    android:minWidth="@dimen/group_invite_dialog_width" >

    <com.medzone.framework.view.RoundedImageView
        android:id="@+id/riv_member"
        android:layout_width="@dimen/group_invite_dialog_avatar_size"
        android:layout_height="@dimen/group_invite_dialog_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/group_invite_dialog_avatar_marginleft_2"
        android:contentDescription="@string/todo"
        android:src="@drawable/settingview_avatar"
        app:oval="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/group_invite_dialog_avatar_marginleft"
        android:layout_toRightOf="@id/riv_member"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo"
            android:textColor="@android:color/black"
            android:textSize="@dimen/group_invite_dialog_textsize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_member_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:text="@string/todo"
                android:textColor="@android:color/black"
                android:textSize="@dimen/group_invite_dialog_textsize" />

            <TextView
                android:id="@+id/tv_member_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/group_invite_dialog_avatar_marginleft"
                android:alpha="0.4"
                android:text="@string/todo"
                android:textColor="@android:color/black"
                android:textSize="@dimen/group_invite_dialog_textsize" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>