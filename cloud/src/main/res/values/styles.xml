<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AnimFade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="AnimTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>

    <style name="AnimTop2" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in2</item>
        <item name="android:windowExitAnimation">@anim/push_top_out2</item>
    </style>

    <style name="AnimHead" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/head_in</item>
        <item name="android:windowExitAnimation">@anim/head_out</item>
    </style>

    <style name="Anim_style" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>
    </style>

    <style name="Anim_style2" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>
    </style>

    <style name="DialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="WindowDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_confirm_item</item>
        <item name="android:textAppearance">@android:style/TextAppearance.WindowTitle</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogActivityStyle" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:outAnimation">@android:anim/slide_in_left</item>
        <item name="android:inAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="DialogStyleTop" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimTop2</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <style name="HeadScale" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimHead</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <style name="TopTitleTextShadow">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowColor">#7f000000</item>
    </style>

    <style name="EditTextShadow">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowColor">#ffffff</item>
    </style>

    <style name="MeasureButtonShadow">
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowColor">#7f000000</item>
    </style>

    <style name="CloudDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <!-- 获取验证码按钮样式 -->
    <style name="GetCheckCodeDrawable">
        <item name="android:textColor">@drawable/selector_button_textcolor</item>
        <item name="android:textSize">@dimen/font_confirm_item</item>
        <item name="android:background">@drawable/selector_button_public</item>
    </style>
    <!-- 注册流程中确认按钮样式 -->
    <style name="ConfirmButtonDrawable">
        <item name="android:background">@drawable/selector_button_public</item>
        <item name="android:textColor">@drawable/selector_button_textcolor</item>
        <item name="android:textSize">@dimen/font_confirm_item</item>
    </style>
    <!-- 附加Icon输入框样式 -->
    <style name="InputTextViewWithDrawable">
        <item name="android:textColor">@color/font_input_dark</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
        <item name="android:background">@drawable/public_input_box</item>
        <item name="android:drawablePadding">@dimen/rigister_icon_padding</item>
        <item name="android:paddingLeft">@dimen/rigister_icon_padding_right</item>
        <item name="android:textColorHint">@color/font_hint_dark</item>
    </style>
    <!-- 普通输入框样式 -->
    <style name="RegisterNormalEditDrawable">
        <item name="android:background">@drawable/public_input_box</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/font_input_dark</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
        <item name="android:textColorHint">@color/font_hint_dark</item>
    </style>
    <!-- 注册流程中一般说明性文本样式 -->
    <style name="RegisterExplainTextStyle">
        <item name="android:textColor">@color/font_text_explain</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
    </style>

    <style name="RegisterNormalFontStyle">
        <item name="android:textColor">@color/font_input_dark</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
        <item name="android:textColorHint">@color/font_hint_dark</item>
    </style>

    <style name="LoginInputIconDrawable">
        <item name="android:paddingBottom">@dimen/login_input_icon_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/login_input_icon_margin_left</item>
        <item name="android:paddingRight">@dimen/login_input_icon_margin_right</item>
        <item name="android:paddingTop">@dimen/login_input_icon_margin_top</item>
    </style>

    <style name="LoginInputEditDrawable">
        <item name="android:background">@drawable/public_input_box</item>
        <item name="android:textColor">@color/font_input_dark</item>
        <item name="android:textSize">@dimen/font_login_item</item>
        <item name="android:textColorHint">@color/font_hint_dark</item>
    </style>

    <!-- forgetpassword  resetpassword -->
    <style name="RegisterEditViewDrawable">
        <item name="android:textColor">@color/font_input_dark</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
        <item name="android:background">@drawable/public_input_box</item>
        <item name="android:drawablePadding">@dimen/rigister_icon_padding</item>
        <item name="android:paddingLeft">@dimen/forget_password_account_left</item>
        <item name="android:textColorHint">@color/font_hint_dark</item>
    </style>

    <style name="RegisterButtonStyle">
        <item name="android:background">@drawable/selector_button_public</item>
        <item name="android:textColor">@drawable/selector_button_textcolor</item>
        <item name="android:textSize">@dimen/font_confirm_item</item>
    </style>

    <style name="SettingNameStype">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_setting_name_item</item>
    </style>

    <style name="SettingKeyStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
    </style>

    <style name="SettingGreyStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">@dimen/five_tenth</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
    </style>

    <style name="SettingProviderStyle">
        <item name="android:textColor">@color/font_hint_color</item>
        <item name="android:textSize">@dimen/font_setting_provider_textsize</item>
    </style>

    <style name="SettingValueStyle">
        <item name="android:textColor">@color/setting_value_color</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
    </style>

    <style name="SettingExplainTextStyle">
        <item name="android:textColor">@color/font_text_explain</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
    </style>

    <style name="GroupDatumDescriptionTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/group_description_textsize</item>
        <!-- <item name="android:alpha">0.4</item> -->
    </style>

    <style name="ClockHintStyle">
        <item name="android:textColor">@color/service_clock_grey_color</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
    </style>

    <style name="ClockNormalStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_normal_item</item>
    </style>

    <style name="ClockTimeStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_clock_time_size</item>
    </style>

    <style name="ClockDescriptionStyle">
        <item name="android:textColor">@color/font_hint_color</item>
        <item name="android:textSize">@dimen/font_clock_description_size</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.Sherlock.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
