<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_lightgrey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_privacy_margin_top"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:textColor="@color/font_input_dark" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_top" />

        <TextView
            android:id="@+id/tv_tied_view"
            style="@style/SettingKeyStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_input_height"
            android:paddingLeft="@dimen/setting_privacy_margin_left"
            android:paddingRight="@dimen/setting_privacy_margin_right"
            android:background="@drawable/selector_press_white_effect"
            android:drawableRight="@drawable/settingview_arrow"
            android:gravity="center_vertical|left"
            android:text="@string/setting_bind_information" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:alpha="0.2"
            android:background="@color/divider_mid" />

        <TextView
            android:id="@+id/setting_privacy_password_update"
            style="@style/SettingKeyStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_input_height"
            android:paddingLeft="@dimen/setting_privacy_margin_left"
            android:paddingRight="@dimen/setting_privacy_margin_right"
            android:background="@drawable/selector_press_white_effect"
            android:drawableRight="@drawable/settingview_arrow"
            android:gravity="center_vertical"
            android:text="@string/setting_password_changed" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_bottom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_privacy_margin_top"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:textColor="@color/font_input_dark" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_top" />

        <TextView
            android:id="@+id/setting_privacy_measure_permission"
            style="@style/SettingKeyStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_input_height"
            android:paddingLeft="@dimen/setting_privacy_margin_left"
            android:paddingRight="@dimen/setting_privacy_margin_right"
            android:background="@drawable/selector_press_white_effect"
            android:drawableRight="@drawable/settingview_arrow"
            android:gravity="center_vertical"
            android:text="@string/istest" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:alpha="0.2"
            android:background="@color/divider_mid" />

        <TextView
            android:id="@+id/setting_privacy_view_permission"
            style="@style/SettingKeyStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_input_height"
            android:paddingLeft="@dimen/setting_privacy_margin_left"
            android:paddingRight="@dimen/setting_privacy_margin_right"
            android:background="@drawable/selector_press_white_effect"
            android:drawableRight="@drawable/settingview_arrow"
            android:gravity="center_vertical"
            android:text="@string/isview" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_bottom" />
    </LinearLayout>

</LinearLayout>