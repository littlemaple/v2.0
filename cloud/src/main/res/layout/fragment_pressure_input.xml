<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pressure_input_margin_bottom"
        android:layout_marginLeft="@dimen/pressure_input_margin_left"
        android:layout_marginRight="@dimen/pressure_input_margin_right"
        android:layout_marginTop="@dimen/pressure_input_margin_top"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_input_high"
            android:layout_width="0dp"
            android:layout_height="@dimen/pressure_input_high"
            android:layout_weight="1.0"
            android:background="@drawable/item_bg_blood"
            android:gravity="center_vertical"
            android:hint="@string/systolic_pressure"
            android:padding="@dimen/input_padding" />

        <TextView
            android:id="@+id/tv_input_low"
            android:layout_width="0dp"
            android:layout_height="@dimen/pressure_input_high"
            android:layout_marginLeft="@dimen/input_padding"
            android:layout_weight="1.0"
            android:background="@drawable/item_bg_blood"
            android:gravity="center_vertical"
            android:hint="@string/diastolic_pressure"
            android:padding="@dimen/input_padding" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_input_rate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pressure_input_high"
        android:layout_marginLeft="@dimen/pressure_input_margin_left"
        android:layout_marginRight="@dimen/pressure_input_margin_right"
        android:background="@drawable/item_bg_blood"
        android:gravity="center_vertical"
        android:hint="@string/heart_rate"
        android:padding="@dimen/input_padding" />

</LinearLayout>