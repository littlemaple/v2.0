<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <GridView
        android:id="@+id/gride_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/service_margin_left"
        android:layout_marginRight="@dimen/service_margin_right"
        android:layout_marginTop="@dimen/service_margin_top"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/service_grideview_vertical_spacing" >
    </GridView>

</LinearLayout>