<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.medzone.mcloud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_lightgrey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:textColor="@color/font_input_dark" >

        <com.medzone.framework.view.RoundedImageView
            android:id="@+id/im_personal_icon"
            android:layout_width="@dimen/setting_avator_width"
            android:layout_height="@dimen/setting_avator_height"
            android:layout_marginBottom="@dimen/setting_tied_info_margin_bottom"
            android:layout_marginLeft="@dimen/setting_tied_info_margin_left"
            android:layout_marginRight="@dimen/setting_tied_info_margin_right"
            android:layout_marginTop="@dimen/setting_tied_info_margin_top"
            android:src="@drawable/settingview_avatar"
            app:oval="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_personal_nickname"
                style="@style/SettingKeyStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/setting_tied_info_accountIdTV"
                style="@style/SettingValueStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_tied_info_text_margin_top" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_privacy_margin_top"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_top" />

        <LinearLayout
            android:id="@+id/setting_tied_info_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_input_height"
            android:background="@drawable/selector_press_white_effect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/setting_tied_info_margin_item_left"
            android:paddingRight="@dimen/setting_tied_info_margin_item_right"
            android:textColor="@color/font_input_dark" >

            <TextView
                style="@style/SettingKeyStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_real_name" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/setting_tied_info_usernameTV"
                style="@style/SettingValueStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical|right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:alpha="0.2"
            android:background="@color/divider_mid" />

        <LinearLayout
            android:id="@+id/setting_tied_info_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_input_height"
            android:background="@drawable/selector_press_white_effect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/setting_tied_info_margin_item_left"
            android:paddingRight="@dimen/setting_tied_info_margin_item_right"
            android:textColor="@color/font_input_dark" >

            <TextView
                style="@style/SettingKeyStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/setting_tied_info_emailTV"
                style="@style/SettingValueStyle"
                android:layout_width="@dimen/setting_tied_info_item_width"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical|right"
                android:singleLine="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:alpha="0.2"
            android:background="@color/divider_mid" />

        <LinearLayout
            android:id="@+id/setting_tied_info_mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_input_height"
            android:background="@drawable/selector_press_white_effect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/setting_tied_info_margin_item_left"
            android:paddingRight="@dimen/setting_tied_info_margin_item_right"
            android:textColor="@color/font_input_dark" >

            <TextView
                style="@style/SettingKeyStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/setting_tied_info_mobileTV"
                style="@style/SettingValueStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical|right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:alpha="0.2"
            android:background="@color/divider_mid" />

        <LinearLayout
            android:id="@+id/setting_tied_info_ID"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_input_height"
            android:background="@drawable/selector_press_white_effect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/setting_tied_info_margin_item_left"
            android:paddingRight="@dimen/setting_tied_info_margin_item_right"
            android:textColor="@color/font_input_dark" >

            <TextView
                style="@style/SettingKeyStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_card" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/setting_tied_info_IDTV"
                style="@style/SettingValueStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical|right" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:alpha="0.2"
            android:background="@color/divider_mid" />

        <LinearLayout
            android:id="@+id/setting_tied_info_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_input_height"
            android:background="@drawable/selector_press_white_effect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/setting_tied_info_margin_item_left"
            android:paddingRight="@dimen/setting_tied_info_margin_item_right"
            android:textColor="@color/font_input_dark" >

            <TextView
                style="@style/SettingKeyStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/setting_tied_info_addressTV"
                style="@style/SettingValueStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/settingview_arrow"
                android:gravity="center_vertical|right"
                android:maxLength="@integer/limit_address_show"
                android:singleLine="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_bottom" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_bottom" />

</LinearLayout>