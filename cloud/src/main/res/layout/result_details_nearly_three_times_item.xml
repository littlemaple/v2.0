<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/measure_result_details_history_trend_itme_high"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/measure_result_details_time_margin_right"
            android:scaleType="centerInside"
            android:src="@drawable/detailsoftheresultsview_ic_time" />

        <TextView
            android:id="@+id/result_details_nearly_three_times_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="@dimen/five_tenth"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_measure_result_details_history_trend_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/result_details_nearly_three_times_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="@dimen/five_tenth"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_measure_result_details_history_trend_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>