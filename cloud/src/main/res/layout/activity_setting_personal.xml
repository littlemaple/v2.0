<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.medzone.mcloud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_lightgrey"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/relay_switch_avatar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_edit_personinfo_top_item_height"
                android:background="@drawable/selector_press_white_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/setting_margin_horizal"
                android:paddingRight="@dimen/setting_margin_horizal" >

                <TextView
                    android:id="@+id/tv_personal_name"
                    style="@style/SettingKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/avatar" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/divider_height"
                    android:layout_weight="1" />

                <com.medzone.framework.view.RoundedImageView
                    android:id="@+id/im_personal_icon"
                    android:layout_width="@dimen/setting_edit_personinfo_avatar_width"
                    android:layout_height="@dimen/setting_edit_personinfo_avatar_height"
                    android:background="@drawable/settingview_avatar"
                    android:contentDescription="@string/todo"
                    app:oval="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/settingview_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:alpha="0.2"
                    android:background="@color/divider_mid" />

                <LinearLayout
                    android:id="@+id/relay_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_input_height"
                    android:background="@drawable/selector_press_white_effect"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/setting_margin_horizal"
                    android:paddingRight="@dimen/setting_margin_horizal" >

                    <TextView
                        style="@style/SettingKeyStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nickname" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/divider_height"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_personal_nickname"
                        style="@style/SettingValueStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uninited" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/settingview_arrow" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_bottom" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="@dimen/setting_top_margin_bottom"
            android:background="@color/divider_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/relay_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:background="@drawable/selector_press_white_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/setting_margin_horizal"
                android:paddingRight="@dimen/setting_margin_horizal" >

                <TextView
                    style="@style/SettingKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/divider_height"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_personal_gender"
                    style="@style/SettingValueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uninited" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/settingview_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:alpha="0.2"
                android:background="@color/divider_mid" />

            <LinearLayout
                android:id="@+id/relay_birthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:background="@drawable/selector_press_white_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/setting_margin_horizal"
                android:paddingRight="@dimen/setting_margin_horizal" >

                <TextView
                    style="@style/SettingKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/birthday" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/divider_height"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_personal_birth"
                    style="@style/SettingValueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uninited" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/settingview_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:alpha="0.2"
                android:background="@color/divider_mid" />

            <LinearLayout
                android:id="@+id/relay_height"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:background="@drawable/selector_press_white_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/setting_margin_horizal"
                android:paddingRight="@dimen/setting_margin_horizal" >

                <TextView
                    style="@style/SettingKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/divider_height"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_personal_tall"
                    style="@style/SettingValueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uninited" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/settingview_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:alpha="0.2"
                android:background="@color/divider_mid" />

            <LinearLayout
                android:id="@+id/relay_weight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:background="@drawable/selector_press_white_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/setting_margin_horizal"
                android:paddingRight="@dimen/setting_margin_horizal" >

                <TextView
                    style="@style/SettingKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/divider_height"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_personal_weight"
                    style="@style/SettingValueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uninited" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/settingview_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:alpha="0.2"
                android:background="@color/divider_mid" />

            <LinearLayout
                android:id="@+id/relay_body_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:background="@drawable/selector_press_white_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/setting_margin_horizal"
                android:paddingRight="@dimen/setting_margin_horizal" >

                <TextView
                    style="@style/SettingKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/body_state" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/divider_height"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_personal_health"
                    style="@style/SettingValueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unnull" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/settingview_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:alpha="0.2"
                android:background="@color/divider_mid" />

            <LinearLayout
                android:id="@+id/relay_pregnant"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_input_height"
                android:background="@drawable/selector_press_white_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/setting_margin_horizal"
                android:paddingRight="@dimen/setting_margin_horizal" >

                <TextView
                    style="@style/SettingKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pregnancy" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/divider_height"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_personal_pregnant"
                    style="@style/SettingValueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uninited" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/settingview_arrow" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_bottom" />

        <Button
            android:id="@+id/btn_logout"
            style="@style/ConfirmButtonDrawable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_btn_height"
            android:layout_marginBottom="@dimen/setting_personal_exit_margin_bottom"
            android:layout_marginLeft="@dimen/setting_personal_exit_margin_left"
            android:layout_marginRight="@dimen/setting_personal_exit_margin_right"
            android:layout_marginTop="@dimen/setting_personal_exit_margin_top"
            android:background="@drawable/public_btn_quit"
            android:text="@string/setting_personal_logout" />
    </LinearLayout>

</ScrollView>