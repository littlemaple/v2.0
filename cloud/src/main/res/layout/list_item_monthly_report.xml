<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/relativelayout"
        >
        <ImageView
	        android:id="@+id/iv_measure_module"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="@dimen/home_monthly_report_item_marginright"
	        android:contentDescription="@string/todo" 
        	/>

	    <TextView
	        android:id="@+id/tv_exception_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@id/iv_measure_module"
	        android:layout_toRightOf="@id/iv_measure_module"
	        android:text="@string/todo"
	        android:textColor="@drawable/select_list_monthly_report"
	        android:textSize="@dimen/home_monthly_report_item_textsize" 
	        />
	
	    <TextView
	        android:id="@+id/tv_total_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@id/iv_measure_module"
	        android:text="@string/todo"
	        android:textColor="@drawable/select_list_monthly_report"
	        android:textSize="@dimen/home_monthly_report_item_textsize" 
	        />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/home_monthly_report_divider_margin_vertical"
        android:layout_marginLeft="@dimen/home_monthly_report_divider_horizontal"
        android:layout_marginRight="@dimen/home_monthly_report_divider_horizontal"
        android:layout_marginTop="@dimen/home_monthly_report_divider_margin_vertical"
        android:background="@android:color/white" 
        android:layout_toRightOf="@+id/relativelayout"
        />

</RelativeLayout>